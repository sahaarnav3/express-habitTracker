<div class="homepage-nav">
    <form action="/log-out" method="POST" class="homepage-navbar">
        <h2>🙋‍♂️ <%= username %></h2>
        <input class="logout-btn" type="submit" value="Log Out 👋">
    </form>
</div>

<div class="homepage-input">
    <form action="/create-habit" method="POST" class="homepage-input-form">
        <input class="homepage-input-text" type="text" name="habit-name"
            placeholder="Enter Something About Your Habit.." required>
        <input class="homepage-input-submit" type="submit" value="Add Habit">
    </form>
</div>
<div class="habit-list-and-details">
    <div class="habit-list">
        <h2>Habit List</h2>
        <div class="habit-list-content">
            <% for(habit of habitList) { %>
                <form action="/delete-habit" method="POST" class="habit-form" id="<%= habit['_id'] %>">
                    <div class="habit-title-and-days">
                        <h3 id="<%= habit['_id'] %>"><%= habit.title %></h3>
                        <h5 id="<%= habit['_id'] %>"><%= habitCount[habit['_id']].doneDays %> out of <%= habitCount[habit['_id']].totalDays %> days</h5>
                    </div>
                    <input type="hidden" name="habit-id" value="<%= habit['_id'] %>">
                    <input type="submit" class="delete-habit" value="Delete Habit">
                </form>
            <% } %>
        </div>
    </div>
    <div class="habit-details">
        <div class="habit-days-list">
            <!-- <div class="habit-day" id="habitId-and-date">
                <h4>🗓️ Wednesday May 05, 2024</h4>
                <div class="habit-status">
                    <input type="button" value="Done">
                    <input type="button" value="Not Done">
                    <input type="button" value="No Action" class="selected">
                </div>
            </div> -->
        </div>
        <div class="habit-description hidden">
            <h2>Habit Notes</h2>
            <div class="habit-notes">
                <input type="text" class="habit-note-input" placeholder="Type a note..">
                <input type="submit" class="habit-note-submit" value="Submit">
            </div>
            <div class="habit-note-display">
            </div>
        </div>
    </div>
</div>
<script src="/javascript/script.js"></script>